<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleLibroActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/detalleTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detalleAutor"/>

    <TextView
        android:id="@+id/detalleAutor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Autor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/detalleAnyo"
        app:layout_constraintTop_toBottomOf="@id/detalleTitulo"/>

    <TextView
        android:id="@+id/detalleAnyo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃ±o"
        app:layout_constraintStart_toEndOf="@id/detalleAutor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detalleTitulo"/>

    <TextView
        android:id="@+id/detalleResumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resumen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detalleAutor"/>
</androidx.constraintlayout.widget.ConstraintLayout>