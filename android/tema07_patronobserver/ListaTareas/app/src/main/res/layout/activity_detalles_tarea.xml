<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetallesTareaActivity">

        <EditText
            android:id="@+id/detalleTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nombre_de_tarea"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/detalleCompletada"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/detalleDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="10"
            android:gravity="start"
            android:layout_marginVertical="4dp"
            android:hint="@string/descripcion"
            app:layout_constraintTop_toBottomOf="@id/detalleTitulo"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/detalleCompletada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_completada"
            android:background="@android:color/holo_red_dark"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:padding="5dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guardar_tarea"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>